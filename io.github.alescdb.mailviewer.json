{
  "id": "io.github.alescdb.mailviewer",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "mailviewer",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland",
    "--filesystem=home",
    "--filesystem=xdg-run/mailviewer:create"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/llvm16/bin",
    "env": {
      "CARGO_HOME": "/run/build/mailviewer/cargo"
    }
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "gmime",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/jstedfast/gmime.git",
          "tag": "3.2.15"
        }
      ]
    },
    {
      "name": "mailviewer",
      "builddir": true,
      "buildsystem": "meson",
      "build-options": {
        "env": {
          "CARGO_HOME": "/run/build/mailviewer/cargo",
          "OFFLINE_BUILD": "1"
        }
      },
      "sources": [
        "mailviewer-sources.json",
        {
          "type": "git",
          "url": "https://github.com/alescdb/mailviewer.git",
          "tag": "0.9.4"
        }
      ]
    }
  ]
}